# Enhanced Knowledge Bot Configuration

# =============================================================================
# CORE TELEGRAM BOT CONFIGURATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_CHAT_ID=your_admin_chat_id

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================

# Gemini AI (Google AI Studio)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-pro
GEMINI_ANALYSIS_TIMEOUT=600

# OpenRouter (for Claude, GPT, and Image Generation)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# AI Models via OpenRouter
CLAUDE_MODEL=anthropic/claude-3.5-sonnet
GPT_MODEL=openai/gpt-4
IMAGE_MODEL=google/gemini-2.5-flash-image-preview

# Token Limits
OPENROUTER_MAX_TOKENS=4000
CLAUDE_MAX_TOKENS=8000
GPT_MAX_TOKENS=4000

# =============================================================================
# RAILWAY DEPLOYMENT CONFIGURATION
# =============================================================================
RAILWAY_API_URL=https://railway-yt-dlp-service-production.up.railway.app
RAILWAY_API_KEY=your_railway_api_key_if_needed
RAILWAY_STATIC_URL=https://your-app.up.railway.app

# =============================================================================
# ENHANCED FEATURES CONFIGURATION
# =============================================================================

# Smart Image Generation
ENABLE_IMAGE_GENERATION=true
TARGET_CONTENT_LENGTH=3000
MAX_PROCESSING_TIME=1800

# =============================================================================
# NOTION DATABASE INTEGRATION
# =============================================================================
USE_NOTION_STORAGE=true
NOTION_API_KEY=secret_your_notion_integration_key
NOTION_DATABASE_ID=your_database_id_here

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
TEMP_DIR=/tmp/knowledge_bot
KNOWLEDGE_BASE_PATH=./knowledge_base

# =============================================================================
# OPTIONAL: GITHUB INTEGRATION
# =============================================================================
GITHUB_USERNAME=your_github_username
GITHUB_TOKEN=your_github_token
PRIVATE_REPO_PATH=username/private-knowledge-repo
GIT_AUTO_COMMIT=false
AUTO_COMMIT=false
AUTO_PUSH=false

# =============================================================================
# ANTHROPIC DIRECT API (FALLBACK)
# =============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_if_using_direct

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Rate Limiting
MAX_VIDEOS_PER_HOUR=10

# Quality Control
MIN_CATEGORY_CONFIDENCE=0.7
MAX_VIDEO_DURATION_SECONDS=600

# Performance
SESSION_TTL_MINUTES=30
MAX_CONCURRENT_PROCESSING=5

# Logging
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=7

# =============================================================================
# DEVELOPMENT/DEBUG SETTINGS
# =============================================================================
DEBUG=false
ENABLE_DEV_LOGGING=false
SKIP_VIDEO_DOWNLOAD=false
MOCK_AI_RESPONSES=false
