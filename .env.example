# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Railway yt-dlp (Optional - can be left empty if using alternative download method)
RAILWAY_API_URL=https://your-app.up.railway.app
RAILWAY_API_KEY=  # Optional - Railway doesn't require API key

# AI Services  
GEMINI_API_KEY=your_gemini_key_here
GEMINI_MODEL=gemini-2.0-flash-exp  # Options: gemini-2.0-flash-exp, gemini-1.5-pro, gemini-1.5-flash

# OpenRouter (replaces direct Anthropic)
OPENROUTER_API_KEY=your_openrouter_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet  # Options: anthropic/claude-3.5-sonnet, anthropic/claude-3-haiku, etc.
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Storage
KNOWLEDGE_BASE_PATH=./knowledge_base

# Storage Configuration
STORAGE_MODE=markdown  # Options: "book" (Obsidian), "markdown" (simple files)
KNOWLEDGE_BASE_PATH=./knowledge_base  # Where to save knowledge entries

# Book Mode Configuration (OPTIONAL - for Obsidian users)
OBSIDIAN_VAULT_PATH=./knowledge_base  # Path to your Obsidian vault
ENABLE_BOOK_STRUCTURE=true  # Enable beautiful book-like organization
AUTO_GENERATE_INDEX=true  # Auto-update table of contents

# Private Repository Auto-Sync (OPTIONAL - for GitHub integration)
PRIVATE_REPO_PATH=  # Path to your private knowledge repo (leave empty to disable)
GITHUB_USERNAME=  # Your GitHub username
GITHUB_TOKEN=  # Generate at https://github.com/settings/tokens (repo scope)
AUTO_COMMIT=false  # Automatically commit new knowledge entries
AUTO_PUSH=false  # Automatically push to GitHub

# Limits
MAX_VIDEO_DURATION_SECONDS=600
RATE_LIMIT_PER_HOUR=10

# Timeouts (seconds)
RAILWAY_DOWNLOAD_TIMEOUT=300
GEMINI_ANALYSIS_TIMEOUT=180
GEMINI_VIDEO_PROCESS_TIMEOUT=300
CLAUDE_ENRICHMENT_TIMEOUT=120