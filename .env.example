# ==================================================
# Knowledge Bot - Environment Configuration
# ==================================================

# Core Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_CHAT_ID=your_admin_chat_id_here

# Railway Video Download Service
RAILWAY_API_URL=https://railway-yt-dlp-service-production.up.railway.app
RAILWAY_API_KEY=your_railway_api_key_here

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter Model Configuration
CLAUDE_MODEL=anthropic/claude-3.5-sonnet
GPT_MODEL=openai/gpt-4
IMAGE_MODEL=black-forest-labs/flux-1.1-pro

# Token Limits
OPENROUTER_MAX_TOKENS=4000
CLAUDE_MAX_TOKENS=8000

# Storage Configuration
KNOWLEDGE_BASE_PATH=./knowledge_base
TEMP_DIR=/tmp/knowledge_bot

# Notion Integration (Optional)
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here
USE_NOTION_STORAGE=true

# Processing Configuration
TARGET_CONTENT_LENGTH=2500
ENABLE_IMAGE_GENERATION=true
MAX_PROCESSING_TIME=1800

# GitHub Integration (Optional)
GITHUB_USERNAME=your_github_username
GITHUB_TOKEN=your_github_token
AUTO_COMMIT=false
AUTO_PUSH=false
