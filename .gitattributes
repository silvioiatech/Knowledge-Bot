# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyi text eol=lf

# Markdown files
*.md text eol=lf

# Shell scripts
*.sh text eol=lf

# JSON files
*.json text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Documentation
*.txt text eol=lf
*.rst text eol=lf

# Config files
.env.example text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Exclude from exports
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
