# Copy this file to .env and add your actual credentials

# ===== TEXTBOOK-QUALITY CONTENT GENERATION =====

# Enhanced AI Models for Comprehensive Content
GEMINI_MODEL=gemini-1.5-pro  # Better analysis than Flash
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet  # Keep Sonnet for quality
OPENROUTER_MAX_TOKENS=4000  # Increased for comprehensive content

# Image Generation Configuration (NEW!)
IMAGE_MODEL=google/gemini-2.5-flash-image-preview
ENABLE_IMAGE_GENERATION=true
MAX_IMAGES_PER_ENTRY=3  # Up to 3 diagrams per entry

# Content Quality Configuration
TARGET_CONTENT_LENGTH=3000  # Target word count for comprehensive coverage
MIN_CATEGORY_CONFIDENCE=0.7  # Category confidence threshold

# Cost Tracking
ENABLE_COST_TRACKING=true
LOG_TOKEN_USAGE=true

